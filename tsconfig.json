{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@framework/*": [
                "../Live2D/CubismSdkForWeb/Framework/src/*"
            ]
        },
        "skipLibCheck": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "../Live2D/CubismSdkForWeb/Core/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
